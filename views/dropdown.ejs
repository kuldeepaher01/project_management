<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		/>

		<!-- Style -->
		<link rel="stylesheet" href="css/style.css" />

		<title>VIPM</title>
	</head>
	<body>
		<header>
			<div class="header">
				<a href="#" class="logo"
					><img
						src="https://geekyhumans.com/wp-content/uploads/2022/09/owl.png?ezimgfmt=ng%3Awebp%2Fngcb5%2Frs%3Adevice%2Frscb5-1"
						alt=""
				/></a>
				<a class="tit"> VIT Project Management System</a>
				<div class="header-right">
					<a href="/contact">Contact Us</a>
					<a href="/about">About Us</a>
				</div>
			</div>

			<div class="main-heading">
				<h1>
					<span id="HELLO_THIS_IS_MY_FIRST_HEADER-3"
						>Welcome, please select the course and division to view the
						data</span
					>
				</h1>
			</div>
		</header>
		<form action="/dropdown" method="post">
			<label for="department">Select a department:</label>
			<select id="department" name="department">
				<option value="DESH">DESH</option>
				<option value="DOME">DOME</option>
				<option value="ENTC">ENTC</option>
				<option value="CS">CS</option>
				<option value="MECH">MECH</option>
				<option value="INSTRU">INSTRU</option>
				<option value="AIDS">AIDS</option>
			</select>
			<br /><br />
			<label for="course">Select a course:</label>
			<select id="course" name="course">
				<option value="">--Select department first--</option>
			</select>
			<br /><br />
			<label for="division">Select a division:</label>
			<select id="division" name="division">
				<option value="">--Select department first--</option>
			</select>
			<br /><br />
			<input type="submit" value="Submit" id="submit-btn" />
		</form>
		<script>
			var department = document.getElementById("department");
			var course = document.getElementById("course");
			var division = document.getElementById("division");

			department.addEventListener("change", function () {
				if (department.value == "DESH") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="MAR">MAR</option><option value="RMAE">RMAE</option><option value="DSUP">DSUP</option><option value="PSAP">PSAP</option><option value="MAD">MAD</option>';
					division.innerHTML = generateDivisionOptions("DESH", "S");
				} else if (department.value == "DOME") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="DBMS">DBMS</option><option value="OOP">OOP</option><option value="DS">DS</option><option value="IoT">IoT</option>';
					division.innerHTML = generateDivisionOptions("DOME", "D");
				} else if (department.value == "ENTC") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="DC">DC</option><option value="ADS">ADS</option><option value="DS">DS</option><option value="IE">IE</option>';
					division.innerHTML = generateDivisionOptions("ENTC", "D");
				} else if (department.value == "CS") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="COA">COA</option><option value="ADS">ADS</option><option value="AT">AT</option>';
					division.innerHTML = generateDivisionOptions("CS", "A");
				} else if (department.value == "MECH") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="MECH101">MECH101</option><option value="MECH102">MECH102</option><option value="MECH103">MECH103</option>';
					division.innerHTML = generateDivisionOptions("MECH", "D");
				} else if (department.value == "INSTRU") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="INSTRU101">INSTRU101</option><option value="INSTRU102">INSTRU102</option><option value="INSTRU103">INSTRU103</option>';
					division.innerHTML = generateDivisionOptions("INSTRU", "A");
				} else if (department.value == "AIDS") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="AIDS101">AIDS101</option><option value="AIDS102">AIDS102</option><option value="AIDS103">AIDS103</option>';
					division.innerHTML = generateDivisionOptions("AIDS", "A");
				} else {
					course.innerHTML = '<option value="">--Select a course--</option>';
					division.innerHTML =
						'<option value="">--Select department first--</option>';
				}
			});
			function generateDivisionOptions(deptName, numDivisions) {
				var divisionOptions = '<option value="">--Select a division--</option>';
				for (var i = 1; i <= numDivisions; i++) {
					divisionOptions +=
						'<option value="' +
						deptName +
						"-" +
						String.fromCharCode(64 + i) +
						'">' +
						deptName +
						"-" +
						String.fromCharCode(64 + i) +
						"</option>";
				}
				return divisionOptions;
			}

			var department = document.getElementById("department");
			var course = document.getElementById("course");
			var division = document.getElementById("division");

			department.addEventListener("change", function () {
				if (department.value == "DESH") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="MAR">MAR</option><option value="RMAE">RMAE</option><option value="DSUP">DSUP</option><option value="PSAP">PSAP</option><option value="MAD">MAD</option>';
					division.innerHTML = generateDivisionOptions("DESH", 19);
				} else if (department.value == "DOME") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="DBMS">DBMS</option><option value="OOP">OOP</option><option value="DS">DS</option><option value="IoT">IoT</option>';
					division.innerHTML = generateDivisionOptions("DOME", 4);
				} else if (department.value == "ENTC") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="DC">DC</option><option value="ADS">ADS</option><option value="DS">DS</option><option value="IE">IE</option>';
					division.innerHTML = generateDivisionOptions("ENTC", 4);
				} else if (department.value == "CS") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="COA">COA</option><option value="ADS">ADS</option><option value="AT">AT</option>';
					division.innerHTML = generateDivisionOptions("CS", 4);
				} else if (department.value == "MECH") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="MECH101">MECH101</option><option value="MECH102">MECH102</option><option value="MECH103">MECH103</option>';
					division.innerHTML = generateDivisionOptions("MECH", 4);
				} else if (department.value == "INSTRU") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="IN101">IN101</option><option value="IN102">IN102</option><option value="IN103">IN103</option>';
					division.innerHTML = generateDivisionOptions("INSTRU", 4);
				} else if (department.value == "AIDS") {
					course.innerHTML =
						'<option value="">--Select a course--</option><option value="AIDS101">AIDS101</option><option value="AIDS102">AIDS102</option><option value="AIDS103">AIDS103</option>';
					division.innerHTML = generateDivisionOptions("AIDS", 4);
				} else {
					course.innerHTML =
						'<option value="">--Select department first--</option>';
					division.innerHTML =
						'<option value="">--Select department first--</option>';
				}
			});
			var submitBtn = document.getElementById("submit-btn");

			// Initially disable the submit button
			submitBtn.disabled = true;

			// Function to check if course and division are selected
			function checkSelections() {
				if (course.value !== "" && division.value !== "") {
					submitBtn.disabled = false;
				} else {
					submitBtn.disabled = true;
				}
			}

			// Add event listeners to the course and division dropdowns
			course.addEventListener("change", checkSelections);
			division.addEventListener("change", checkSelections);
		</script>

		<script src="js/jquery-3.3.1.min.js"></script>
		<script src="js/popper.min.js"></script>
		<script src="js/bootstrap.min.js"></script>
		<script src="js/owl.carousel.min.js"></script>
		<script src="js/main.js"></script>
	</body>
</html>
